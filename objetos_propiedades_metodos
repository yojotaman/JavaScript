/*Un objeto puede tener propiedades y métodos. Las propiedades son datos y los métodos son funciones, veamos un ejemplo*/

var familia = {
  miembros : 3,    // una propiedad es un dato
  hijos : 1,
  pais : 'colombia',
  ciudad: 'medellin',
  viajar: function(){    // Un método es una funión
  console.log('Nos vamos de viaje');
  }
};


console.log(familia.viajar); /* de esta forma observo la función pero en realidad no la estaría ejecutando*/


/*para ejecutar una fucción en JS es necesario emplear la siguiente notación */
console.log(familia.viajar()); // abre y cierra parentesis 

