/*
Básicos de JavaScript: Funciones, Condicionales y loops
*/

// se define la función

function saludar(){
  console.log('Buenos días');
}

// para ejecutarla simplemente la invocamos:

//  ----saludar();

// las funciones pueden recibir parámetros

function saludar2(nombre){
  console.log('buenos días ' + nombre);
}

//saludar2('Peranito');


// condicionales

if(1>3){
  //console.log('es verdad');
} else{
  //console.log('NO es verdad');
}

// loops o iteraciones
// While
var i = 0;
while (i < 5 ){
  
  //console.log('estoy trabajando');
  i++;
}


// ciclo for 

for(var j=0; j<5; i++){
  console.log('estoy tranajando con for linea ' + Number(j+1)); //number para q¿ue tome la j como un número
  j++;
}
